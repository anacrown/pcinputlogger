<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MultiBuffer">
    
    
    <DataTemplate DataType="{x:Type local:ClipboardTextData}">
        
        <TextBlock Text="{Binding TextData}"/>
        
    </DataTemplate>

    <DataTemplate DataType="{x:Type local:ClipboardAudioData}">

        <TextBlock Text="Audio"/>

    </DataTemplate>

    <DataTemplate DataType="{x:Type local:ClipboardImageData}">

        <Image MaxWidth="60" Source="{Binding ImageData}"></Image>

    </DataTemplate>

    <DataTemplate DataType="{x:Type local:ClipboardFileDropListData}">

        <StackPanel Orientation="Vertical" ></StackPanel>

    </DataTemplate>


</ResourceDictionary>